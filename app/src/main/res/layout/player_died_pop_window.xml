<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_style"
    android:hapticFeedbackEnabled="true"
    android:shadowColor="#0C16A8"
    android:shadowDx="-3"
    android:shadowDy="-3"
    android:shadowRadius="5"
    >

    <RelativeLayout
        android:layout_width="227dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/playerDeathImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/crusader_placeholder_alpha"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/playerDiedConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView7"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@drawable/confirm_button_style"
            android:text="okay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monstersDefeatedText"
            app:layout_constraintVertical_bias="0.73"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/monstersDefeatedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/expEarnedText"
            android:layout_alignStart="@+id/expEarnedText"
            android:layout_below="@+id/goldEarnedText"
            android:text="0"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/goldEarnedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/expEarnedText"
            android:layout_alignRight="@+id/expEarnedText"
            android:layout_below="@+id/expEarnedText"
            android:text="333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:text="Monsters Defeated:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/expEarnedText"
            android:text="Gold Earned:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:text="You Died!"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/expEarnedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:text="0"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Exp. Earned:"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>